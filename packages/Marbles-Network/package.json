{
  "name": "org.fabric_composer.marbles",
  "version": "0.0.1",
  "description": "Marble Trading Network",
  "scripts": {
    "prepublish": "mkdirp ./dist && composer archive create --sourceType dir --sourceName . -a ./dist/marbles-network.bna",
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check",
    "postlicchk": "npm run doc",
    "doc": "jsdoc --pedantic --recurse -c jsdoc.conf -t ./node_modules/ink-docstrap/template .",
    "test": "mocha --recursive",
    "deploy": "./scripts/deploy.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabric-composer/sample-networks.git"
  },
  "keywords": [
    "marbles",
    "fabric-composer",
    "trading"
  ],
  "author": "IBM",
  "license": "ISC",
  "devDependencies": {
    "composer-admin": "*",
    "composer-cli": "*",
    "composer-client": "*",
    "composer-connector-embedded": "*",
    "chai": "^3.5.0",
    "eslint": "^3.6.1",
    "ink-docstrap": "^1.3.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.4.1",
    "license-check": "^1.1.5",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "moment": "^2.17.1"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*",
      "!./scripts/**/*"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  }
}
